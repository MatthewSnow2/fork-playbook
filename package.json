{
  "name": "adaptive-learning-remix",
  "type": "module",
  "version": "1.0.0",
  "description": "Self-hosted AI curriculum generator with VARK learning style adaptation",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "generate-curriculum": "node cli/index.js generate-curriculum",
    "adapt-vark": "node cli/index.js adapt-vark",
    "mcp-server": "node mcp-server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "bin": {
    "adaptive-learning": "./cli/index.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "hono": "^4.10.4",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^20.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^6.4.1",
    "vitest": "^4.0.16",
    "wrangler": "^4.4.0"
  },
  "keywords": [
    "curriculum",
    "vark",
    "adaptive-learning",
    "claude",
    "mcp",
    "education"
  ],
